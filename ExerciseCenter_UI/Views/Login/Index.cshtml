@model ExerciseCenter_UI.Dtos.LoginDtos.CreateLoginDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Giriş Yap</title>
    <link href="~/exercisecenter/logandreg/styles.css" rel="stylesheet" />
</head>
<body>
    <div class="login-container">
        <form method="post" class="login-form" action="/login" method="post">
            <h2>Giriş Yap</h2>
            <div class="form-group">
                <label for="username" asp-for="Username">Kullanıcı Adı</label>
                <input type="text" id="username" name="username" required>
            </div>
            <div class="form-group">
                <label for="password" asp-for="Username">Şifre</label>
                <input type="password" id="password" name="password" required>
            </div>
            <button type="submit" class="btn">Giriş Yap</button>
            <p>Hesabınız yok mu? <a href="register.html">Kayıt Ol</a></p>
        </form>
    </div>
</body>
</html>
