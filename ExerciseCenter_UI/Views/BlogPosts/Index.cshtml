@model List<ExerciseCenter_UI.Dtos.BlogPostsDtos.ResultBlogPostsDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hizmetlerimiz - Admin Panel</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/ExerciseCenter/admin/admin_panel.css">
</head>
<body>

    <!-- Sidebar and Navbar (Include or use the existing one) -->

    <div class="wrapper">
        <!-- Sidebar -->
        <div class="sidebar">
            <div class="profile-section">
                <img src="images/profile.jpg" alt="Admin Profil" class="profile-img">
                <h4>Admin Kullanıcısı</h4>
            </div>
            <a href="dashboard.html">Dashboard</a>
            <a href="hizmetlerimiz.html">Hizmetlerimiz</a>
            <a href="lavinia_egzersiz.html">Lavinia Egzersiz ve Danışmanlık Hizmetleri</a>
            <a href="blog_yazilarimiz.html">Blog Yazılarımız</a>
            <a href="yorumlar.html">Yorumlar</a>
            <a href="#">Çıkış Yap</a>
        </div>

        <!-- Main Content -->
        <div class="content">
            <h2>Hizmetlerimiz</h2>
            <p>Bu sayfada blog yazılarınızı yönetebilirsiniz.</p>

            <!-- BlogPosts Listeleme -->
            <div class="card">
                <div class="card-header">
                    BlogPosts Listesi
                </div>
                <div class="card-body">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Hizmet İsmi</th>
                                <th scope="col">Açıklama</th>
                                <th scope="col">Güncelle</th>
                                <th scope="col">Sil</th>
                            </tr>
                        </thead>
                        @foreach (var item in Model)
                        {
                            <tbody>
                                <tr>
                                    <th scope="row">@item.ID</th>
                                    <td>@item.Title</td>
                                    <td>@item.Description</td>
                                    <td>
                                        <a href="/BlogPosts/UpdateBlogPosts/@item.ID" class="btn btn-success">Güncelle</a>
                                    </td>
                                    <td>
                                        <a href="/BlogPosts/DeleteBlogPosts/@item.ID" class="btn btn-danger">Sil</a>
                                    </td>
                                </tr>
                            </tbody>
                        }
                    </table>
                </div>
            </div>

            <!-- Yeni blog post Ekleme -->
            <div class="card mt-4">
                <div class="card-header">
                    Yeni blog post Ekle
                </div>
                <div class="card-body">
                    <button type="button" class="btn btn-primary" onclick="window.location.href='/BlogPosts/CreateBlogPosts'">Ekle</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
