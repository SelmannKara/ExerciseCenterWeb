@model ExerciseCenter_UI.Dtos.BlogPostsDtos.CreateBlogPostsDto
@{
    ViewData["Title"] = "CreateBlogPosts";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog Post  - Admin Panel</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/ExerciseCenter/admin/admin_panel.css">
</head>


<div class="container-fluid pt-4 px-4">
    <div class="row g-4 justify-content-center">
        <div class="col-12 col-md-10 offset-md-2">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Yeni Blog Post  Ekleme Sayfası</h6>
                <form method="post">
                    <label> Adı</label>
                    <input type="text" asp-for="Title" class="form-control" />
                    <br />

                    <label>Açıklaması</label>
                    <input type="text" asp-for="Description" class="form-control" />
                    <br />

                    <label>URL</label>
                    <input type="text" asp-for="ImageUrl" class="form-control" />
                    <br />
                    <button class="btn btn-primary">Blog Post Kaydet</button>
                </form>
            </div>
        </div>
    </div>
</div>

