@model List<ExerciseCenter_UI.Dtos.WhoWeAreDtos.ResultWhoWeAreDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lavinia Egzersiz ve Danışmanlık Hizmetleri - Admin Panel</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/ExerciseCenter/admin/admin_panel.css>


    <!-- Sidebar and Navbar (Include or use the existing one) -->

<div class="wrapper">
    <!-- Sidebar -->
    <div class="sidebar">
        <div class="profile-section">
            <img src="images/profile.jpg" alt="Admin Profil" class="profile-img">
            <h4>Admin Kullanıcısı</h4>
        </div>
        <a href="dashboard.html">Dashboard</a>
        <a href="hizmetlerimiz.html">Hizmetlerimiz</a>
        <a href="lavinia_egzersiz.html">Lavinia Egzersiz ve Danışmanlık Hizmetleri</a>
        <a href="blog_yazilarimiz.html">Blog Yazılarımız</a>
        <a href="yorumlar.html">Yorumlar</a>
        <a href="#">Çıkış Yap</a>
    </div>

    <!-- Main Content -->
    <div class="content">
        <h2>Hizmetlerimiz</h2>
        <p>Bu sayfada hizmetlerinizi yönetebilirsiniz.</p>

        <!-- WhoWeAre Listeleme -->
        <div class="card">
            <div class="card-header">
                Hizmet Listesi
            </div>
            <div class="card-body">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Biz Kimiz İsmi</th>
                            <th scope="col">Açıklama</th>
                            <th scope="col">Güncelle</th>
                            <th scope="col">Sil</th>
                        </tr>
                    </thead>
                @foreach (var item in Model)
                {
                        <tbody>
                            <tr>
                                <th scope="row">@item.ID</th>
                                <td>@item.Title</td>
                                <td>@item.Description</td>
                                <td>
                                    <a href="/WhoWeAre/UpdateWhoWeAre/@item.ID" class="btn btn-success">Güncelle</a>
                                </td>
                                <td>
                                    <a href="/WhoWeAre/DeleteWhoWeAre/@item.ID" class="btn btn-danger">Sil</a>
                                </td>
                            </tr>
                        </tbody>
                }
                </table>
            </div>
        </div>

        <!-- Yeni Biz Kimiz Ekleme -->
        <div class="card mt-4">
            <div class="card-header">
                Yeni Biz Kimiz Ekle
            </div>
            <div class="card-body">
                <button type="button" class="btn btn-primary" onclick="window.location.href='/WhoWeAre/CreateWhoWeAre'">Ekle</button>
            </div>
        </div>
    </div>
</div>


    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>



